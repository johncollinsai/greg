apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: johncollins-ingress
  annotations:
    kubernetes.io/ingress.class: "gce"
    # kubernetes.io/ingress.global-static-ip-name: "web-static-ip"
spec:
  rules:
  - http:
      paths:
      - path: "/*"
        pathType: ImplementationSpecific
        backend:
          service:
            name: johncollins-service
            port:
              number: 8080
      - path: "/foo"
        pathType: ImplementationSpecific
        backend:
          service:
            name: foo-service
            port:
              number: 8081
      - path: "/h-w"
        pathType: ImplementationSpecific
        backend:
          service:
            name: h-w-service
            port:
              number: 8082
